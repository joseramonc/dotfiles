execute pathogen#infect()

syntax enable
set background=dark
colorscheme solarized
highlight clear SignColumn

if has("gui_macvim")
  macmenu &File.New\ Tab key=<nop>
  map <D-j> :CommandT<CR>
endif

set guifont=Menlo\ Regular:h15

set number

filetype plugin indent on
set tabstop=2
set shiftwidth=2
set expandtab

let g:CommandTClearPrevWordMap = ['<A-Left>', '<C-w>']
